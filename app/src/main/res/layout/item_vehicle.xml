<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground"
    android:padding="8dp"
    app:cardElevation="@dimen/card_elevation">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/item_car_image"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop"
            android:src="@drawable/car_example2"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:layout_below="@+id/item_car_image">

            <TextView
                android:id="@+id/item_car_manufacturer_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tesla Model S"
                android:textSize="24sp"
                android:textStyle="normal"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/item_car_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_car_manufacturer_model"
                android:text="This car is a very fancy car. There are not many fancy cars in the world."
                tools:ignore="HardcodedText"/>

            <View
                android:id="@+id/item_car_div"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/item_car_description"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/black"/>

            <TextView
                android:id="@+id/item_car_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/item_car_div"
                android:layout_toLeftOf="@+id/item_car_price"
                android:layout_toStartOf="@+id/item_car_price"
                android:text="@string/price_per_hour"/>

            <TextView
                android:id="@+id/item_car_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/item_car_div"
                android:layout_toRightOf="@+id/item_car_licence_plate_title"
                android:text="20â‚¬"
                android:textAlignment="textEnd"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/item_car_licence_plate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_car_price_title"
                android:text="@string/licence_plate"/>

            <TextView
                android:id="@+id/item_car_licence_plate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/item_car_price"
                android:layout_toRightOf="@+id/item_car_licence_plate_title"
                android:text="AB123CD"
                android:textAlignment="textEnd"
                tools:ignore="HardcodedText"/>

        </RelativeLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
