<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:padding="8dp"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/item_car_image"
                android:layout_width="match_parent"
                android:layout_height="192dp"
                android:src="@drawable/car_example2"/>

            <TextView
                android:layout_marginTop="24dp"
                android:layout_marginBottom="0dp"
                android:id="@+id/item_car_manufacturer_model"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_car_image"
                android:text="Tesla Model S"
                android:textSize="24sp"
                android:textStyle="normal"
                tools:ignore="HardcodedText"/>

            <TextView
                android:id="@+id/item_car_description_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_car_manufacturer_model"
                android:text="This car is a very fancy car. There are not many fancy cars in the world."/>

            <View
                android:id="@+id/item_car_div"
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:layout_below="@+id/item_car_description_"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView
                android:id="@+id/item_car_price_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_car_div"
                android:text="@string/price_per_hour"
                android:layout_toLeftOf="@+id/item_car_price"
                android:layout_toStartOf="@+id/item_car_price"
                android:layout_alignParentStart="true"
                />

            <TextView
                android:id="@+id/item_car_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_car_div"
                android:layout_toRightOf="@+id/item_car_licence_plate_title"
                android:text="20â‚¬"
                android:textAlignment="textEnd"
                tools:ignore="HardcodedText"
                android:layout_alignParentEnd="true"/>

            <TextView
                android:id="@+id/item_car_licence_plate_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_car_price_title"
                android:text="@string/licence_plate"/>

            <TextView
                android:id="@+id/item_car_licence_plate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/item_car_price"
                android:layout_toRightOf="@+id/item_car_licence_plate_title"
                android:text="AB123CD"
                android:textAlignment="textEnd"
                tools:ignore="HardcodedText"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
