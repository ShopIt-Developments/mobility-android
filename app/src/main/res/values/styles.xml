<resources>

    <style name="AppTheme.Light" parent="Theme.Light" />
    <style name="AppTheme.Dark" parent="Theme.Dark" />

    <style name="BaseTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:actionMenuTextColor">@color/text_primary</item>
        <item name="colorControlNormal">@color/color_control</item>

        <item name="colorAccent">@color/accent</item>

        <item name="android:textColor">@color/text_secondary</item>
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>

        <item name="android:windowContentOverlay">@null</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>

        <item name="android:windowBackground">@color/window_background</item>

        <item name="android:borderlessButtonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>

    <style name="Theme.Light" parent="BaseTheme">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>

        <item name="android:windowLightStatusBar">true</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>

        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
    </style>

    <style name="Theme.Dark" parent="BaseTheme">
        <item name="colorPrimary">@color/dark_gray_default</item>
        <item name="colorPrimaryDark">@color/dark_gray_dark</item>
    </style>


    <!-- ======================================== TOOLBAR =======================================-->

    <style name="ToolbarOverlay">
        <item name="android:textColorPrimary">@color/text_secondary</item>
        <item name="colorControlNormal">@color/color_control</item>
    </style>

    <style name="MenuOverlay" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:colorBackground">@color/window_background</item>
        <item name="android:textColor">@color/text_primary</item>
    </style>

    <style name="ActionMode" parent="@style/Widget.AppCompat.ActionMode">
        <item name="android:actionModeBackground">@color/material_indigo_500</item>
        <item name="actionModeBackground">@color/material_indigo_500</item>
        <item name="android:background">@color/material_indigo_500</item>
        <item name="background">@color/material_indigo_500</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Dark"/>

    <style name="AppTheme.Settings.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="colorControlNormal">@color/color_control</item>
    </style>


    <!-- ===================================== TEXTINPUTLAYOUT ==================================-->

    <style name="TextInputLayout.Hint" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/material_teal_500</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextInputLayout.White" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorControlNormal">@color/text_secondary_light</item>
        <item name="colorControlHighlight">@color/text_primary_light</item>
        <item name="colorControlActivated">@color/text_primary_light</item>
    </style>

    <style name="TextInputLayout.Green" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textSize">14sp</item>
        <item name="colorControlNormal">@color/accent</item>
        <item name="colorControlHighlight">@color/accent</item>
        <item name="colorControlActivated">@color/accent</item>
    </style>

    <style name="TextInputLayout.Error" parent="TextAppearance.Design.Error">
        <item name="android:textColor">@color/material_red_700</item>
    </style>

    <style name="TextInputLayout.Red" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:textColor">#f6655c</item>
        <item name="android:textColorPrimary">#f6655c</item>
        <item name="android:textColorSecondary">#f6655c</item>

        <item name="colorControlNormal">@color/text_secondary_light</item>
        <item name="colorControlHighlight">@color/text_primary_light</item>
        <item name="colorControlActivated">@color/text_primary_light</item>
    </style>


    <!-- ===================================== TEXTAPPEARANCE ===================================-->

    <style name="Body1Text">
        <item name="android:textAppearance">@style/TextAppearance.Body1</item>
        <item name="android:lineSpacingMultiplier">@dimen/body_1_spacing</item>
    </style>

    <style name="TextAppearance.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textSize">14sp
        </item> <!-- bug in AppCompat, can remove this when it's fixed -->
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="EventDetailsTitle">
        <item name="android:textAppearance">@style/TextAppearance.Title</item>
        <item name="android:textColor">?android:textColorPrimary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:lineSpacingMultiplier">@dimen/h3_spacing</item>
    </style>

    <style name="EventDetailsSubtitle" parent="@style/Body1Text">
        <item name="android:textColor">?android:textColorSecondary</item>
    </style>

    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>


    <!-- ========================================= VARIOUS =====================================-->

    <style name="DialogStyle" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:textColorPrimary">@color/text_secondary</item>
    </style>

    <style name="NavigationOverlay">
        <item name="android:textSize">14sp</item>
        <item name="colorPrimary">@color/accent</item>

        <item name="android:textColorSecondary">@color/icon_grey</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- =================================== COLLAPSING TOOLBAR =================================-->

    <style name="CollapsingToolbar.Expanded"
           parent="TextAppearance.Design.CollapsingToolbar.Expanded">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="CollapsingToolbar.Collapsed" parent="Base.TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textColor">@color/text_secondary</item>
    </style>

</resources>
